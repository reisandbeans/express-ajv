{
    "extends": ["tslint-config-airbnb"],
    "rules": {
        "indent": [true, "spaces", 4],
        "ter-indent": [true, 4],
        "max-line-length": [true, 120],
        "import-name": [false],
        "align": [true, "members", "statements", "elements"],
        "trailing-comma": [true, {
            "multiline": "always",
            "singleline": "never"
        }]
    }
}